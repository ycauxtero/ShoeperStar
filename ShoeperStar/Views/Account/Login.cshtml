@model LoginVM

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
        </p><h4>Log in to your account</h4>
        <p></p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">

            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input class="form-control" asp-for="EmailAddress">
                        <span class="text-danger" asp-validation-for="EmailAddress"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input class="form-control" asp-for="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Log in">
                        <a class="btn btn-outline-secondary" href="/">Cancel</a>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>